@model List<Aluno>  

@if (ViewData["MsgErro"] != null)
{
    <div class="alert-danger">
        @ViewData["MsgErro"]
    </div>
}

@if (ViewData["MsgSucesso"] != null)
{
    <div class="alert-success">
        @ViewData["MsgSucesso"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Idade</th>
            <th scope="col">Matricula</th>
            <th scope="col">Cep</th>
            <th scope="col">Ações</th> <!-- Adicionado uma coluna para ações -->
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (Aluno aluno in Model)
            {
                <tr>
                    <td>@aluno.Nome</td>
                    <td>@aluno.Idade</td>
                    <td>@aluno.Matricula</td>
                    <td>@aluno.Cep</td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a href="@Url.Action("BuscarEndereco", "Aluno", new { cep = aluno.Cep })" class="btn btn-primary">Endereco</a>
                            <a href="@Url.Action("Editar", "Aluno", new { id = aluno.Id })" class="btn btn-primary">Editar</a>
                            <a href="@Url.Action("Excluir", "Aluno", new { id = aluno.Id })" class="btn btn-danger">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

